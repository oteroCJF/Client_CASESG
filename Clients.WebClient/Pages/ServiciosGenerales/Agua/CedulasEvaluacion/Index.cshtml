        </div>

        ViewData["Title"] = "Adquisición de Garrafones de Agua Purificada";
    }
    else if (Model.Anio > 2024)
    {
        <div class="titulo-principal">
            Adquisición de Garrafones de Agua Purificada    <i class="fa-regular fa-glass-water-droplet"></i>
        </div>

